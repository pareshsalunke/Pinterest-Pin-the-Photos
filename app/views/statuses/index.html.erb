<% if user_signed_in? %>
<div class="page-header">
  <h1>All of the Statuses</h1>
</div>



<%= link_to "Post a New Status", new_status_path, class: "btn btn-success" %>
<table class="table table-striped table-bordered table-condensed">
    <thead>
  <tr>

    <th>Name</th>
    <th>Status</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>
</thead>
<% @statuses.each do |status| %>
<tbody>
  <tr>
  

    <td><%= link_to status.user.full_name, profile_path(status.user) %></td>
    <td><%= status.content %></td>
    <td><%= link_to time_ago_in_words(status.created_at) + " ago", status %></td>
    <% if status.user_id == current_user.id %>
    <td><%= link_to "Edit", edit_status_path(status) %> | 
              <%= link_to "Delete", status, method: :delete, data: { confirm: "Are you sure your want to delete this status?"} %>
           </td>
           <% else %>
           <td></td>
           <% end %>
  <% end %>
<% end %>
</table>